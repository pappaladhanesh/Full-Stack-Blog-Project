<article class="post-item">
  
  <h2><%= post.title %></h2>
  
  <p class="author">By: <%= post.author_name %></p>

  <p><%= post.summary %></p>

  <div class="post-actions">
    <a href="/posts/<%= post.id %>" class="btn">View Post</a>
    <a href="/posts/<%= post.id %>/edit" class="btn">Edit Post</a>

    <form action="/posts/<%= post.id %>/delete" method="post" style="display: inline;">
      <button class="btn delete-btn">Delete Post</button>
    </form>
  </div>

</article>
